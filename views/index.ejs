<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/normalize.css" />
    <link rel="stylesheet" href="/skeleton.css" />
    <title>Budgtr</title>
</head>
<body>
    <div class="container">
    <h1>Budgtr ALL</h1>
  
    <% let bankAccount = 0; %>

    <% for(let i = 0; i < budgetTable.length; i++) { %>
        <% bankAccount += parseInt(budgetTable[i].amount) %>
        
    <% } %>

    <h3><%= bankAccount %></h3>

    <table>
        <% for(let i=0; i < budgetTable.length; i++) { %>
            <tr>
                <td> <%= budgetTable[i].date %> </td>
                <td> <a href ="/budget/<%= i %>" ><%= budgetTable[i].name %> </a> </td>
                <td> <%= budgetTable[i].amount %> </td>
            </tr>
        <% } %>
    </table>
  <a href="/budget/new">New Item</a>
</div>

 
</body>
</html>


